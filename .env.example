# Itchan Configuration
# Copy to .env and set your values
# IMPORTANT: Never commit .env to version control

# Domain (used for nginx SSL certificate path)
DOMAIN=yourdomain.com

# PostgreSQL
POSTGRES_USER=itchan
POSTGRES_PASSWORD=<generate-strong-password>
POSTGRES_DB=itchan

# JWT & Encryption (generate with: openssl rand -base64 48)
JWT_KEY=<generate-random-base64-string>
ENCRYPTION_KEY=<generate-random-base64-string>

# Email (SMTP) â€” required for user registration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_SENDER_NAME=Itchan
