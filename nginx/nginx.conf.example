# Nginx configuration for Itchan imageboard
# Optimized for performance, security, and DDoS mitigation

user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

events {
    worker_connections 4096;
    use epoll;
    multi_accept on;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    # Logging
    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';
    access_log /var/log/nginx/access.log main;

    # Performance
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 30;
    keepalive_requests 100;
    reset_timedout_connection on;

    # File upload size (20MB total for imageboard attachments)
    client_max_body_size 25m;
    client_body_buffer_size 128k;

    # Timeouts against slowloris
    client_body_timeout 10s;
    client_header_timeout 10s;
    send_timeout 30s;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_comp_level 6;
    gzip_min_length 1000;
    gzip_types text/plain text/css text/xml text/javascript
               application/json application/javascript application/xml+rss
               application/rss+xml application/atom+xml image/svg+xml;

    # Rate limiting zones
    # General: 10 req/sec per IP with burst of 20
    limit_req_zone $binary_remote_addr zone=general:10m rate=10r/s;

    # API endpoints: 5 req/sec per IP
    limit_req_zone $binary_remote_addr zone=api:10m rate=5r/s;

    # Auth endpoints: 1 req/sec per IP (login, register)
    limit_req_zone $binary_remote_addr zone=auth:10m rate=1r/s;

    # Connection limiting: max 50 concurrent connections per IP
    limit_conn_zone $binary_remote_addr zone=conn_limit:10m;

    # Request limiting by server (global): 1000 req/sec
    limit_req_zone $server_name zone=global:10m rate=1000r/s;

    # Upstream definitions
    upstream frontend {
        server frontend:8081;
        keepalive 32;
    }

    upstream backend {
        server api:8080;
        keepalive 32;
    }

    # HTTP server (redirect to HTTPS)
    server {
        listen 80;
        listen [::]:80;
        server_name _;

        # Allow Let's Encrypt ACME challenge
        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }

        # Redirect all other HTTP to HTTPS
        location / {
            return 301 https://$host$request_uri;
        }
    }

    # HTTPS server
    server {
        listen 443 ssl http2;
        listen [::]:443 ssl http2;
        server_name _;

        # SSL certificates (will be provided by certbot)
        ssl_certificate /etc/letsencrypt/live/DOMAIN_PLACEHOLDER/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/DOMAIN_PLACEHOLDER/privkey.pem;

        # SSL configuration (modern, secure)
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
        ssl_prefer_server_ciphers off;
        ssl_session_cache shared:SSL:10m;
        ssl_session_timeout 10m;
        ssl_stapling on;
        ssl_stapling_verify on;

        # Security headers
        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
        add_header X-Frame-Options "SAMEORIGIN" always;
        add_header X-Content-Type-Options "nosniff" always;
        add_header X-XSS-Protection "1; mode=block" always;
        add_header Referrer-Policy "strict-origin-when-cross-origin" always;

        # Global connection and request limits
        limit_conn conn_limit 50;
        limit_req zone=global burst=100 nodelay;

        # Health check endpoint (no rate limit)
        location = /health {
            access_log off;
            proxy_pass http://frontend;
            proxy_http_version 1.1;
            proxy_set_header Connection "";
        }

        # Backend API endpoints (/api/v1/*)
        location /api/ {
            # Rate limiting for API
            limit_req zone=api burst=10 nodelay;

            # Stricter limits for auth endpoints
            location ~ ^/api/v1/auth/(register|login|check_confirmation_code|register_with_invite) {
                limit_req zone=auth burst=3 nodelay;
                rewrite ^/api(/.*)$ $1 break;
                proxy_pass http://backend;
                proxy_http_version 1.1;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header X-Forwarded-Proto $scheme;
                proxy_set_header Connection "";
            }

            # All other API endpoints (strip /api prefix)
			rewrite ^/api(/.*)$ $1 break;
            proxy_pass http://backend;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Connection "";

            # Timeouts
            proxy_connect_timeout 5s;
            proxy_send_timeout 30s;
            proxy_read_timeout 30s;
        }

        # Metrics endpoint (backend)
        location = /metrics {
            access_log off;
            proxy_pass http://backend;
            proxy_http_version 1.1;
            proxy_set_header Connection "";

            # Optional: restrict to localhost or monitoring IPs
            # allow 127.0.0.1;
            # allow 172.16.0.0/12;  # Docker networks
            # deny all;
        }

        # Static files (CSS, JS, favicon) - served by frontend with aggressive caching
        location /static/ {
            limit_req zone=general burst=20 nodelay;

            proxy_pass http://frontend;
            proxy_http_version 1.1;
            proxy_set_header Connection "";

            # Cache static files in nginx
            proxy_cache_valid 200 30d;
            proxy_cache_bypass $http_pragma $http_authorization;
            add_header Cache-Control "public, max-age=2592000, immutable";

            # Optional: serve directly from volume (more efficient)
            # alias /app/static/;
            # expires 30d;
            # add_header Cache-Control "public, immutable";
        }

        # Media files (uploaded images/videos) - requires authentication, served by frontend
        location /media/ {
            limit_req zone=general burst=20 nodelay;

            proxy_pass http://frontend;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Connection "";

            # Pass cookies for authentication
            proxy_pass_header Set-Cookie;

            # Cache authenticated media (short duration)
            add_header Cache-Control "private, max-age=3600";
        }

        # All other requests go to frontend (HTML pages)
        location / {
            limit_req zone=general burst=20 nodelay;

            proxy_pass http://frontend;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Connection "";

            # Pass cookies
            proxy_pass_header Set-Cookie;
            proxy_cookie_path / /;

            # Timeouts
            proxy_connect_timeout 5s;
            proxy_send_timeout 30s;
            proxy_read_timeout 30s;
        }
    }
}
